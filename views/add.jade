extends layout

block title
    title= 'Добление лота - Auction Express'

block page-header
    h1 Объявите аукцион со своим лотом
    p Заполните поля формы и подтвердите создание аукциона

block content
    .add-form
        form(action="add" method='post')
            label(for="name") Название аукциона
            input(type="text" name='name')
            label(for="description") Описание
            input(type="text" name='description')
            label(for="price") Цена
            input(type="text" name='price')
            button Обявить аукцион